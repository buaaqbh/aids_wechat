@import '/style/weui.wxss';

.page {
  background-color: #f8f8f8;
}

.page__hd {
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page__title {
  font-size: 15px;
  font-weight: 400;
}

.page__desc {
  margin-top: 4px;
  color: #888888;
  text-align: left;
  font-size: 13px;
}

.weui-panel {
  margin-top: 0;
}

.service-list,
.characteristic-list {
  height: 200px;
}

.weui-cell_active {
  background-color: #ececec;
}

.weui-cell__ft {
  color: #666;
  font-size: 13px;
}

.page__bd {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 60px);
}

.button-sp-area {
  display: flex;
  align-items: center;
  padding: 15px;
  display: grid;
  grid-template-columns: repeat(3, minmax(90px, 1fr));
  gap: 15px;
  width: 100%;
  box-sizing: border-box;
  justify-content: center;
  margin: 0 auto;
}

.control-text {
    font-size: 16px;
    margin-right: 10px;
}

/* 自定义 switch 大小 */
.button-sp-area switch {
    transform: scale(0.8);
    margin: -6px 0;  /* 调整垂直间距，防止缩放后占用过多空间 */
}

/* 移除按钮的最小宽度限制 */
.weui-btn {
    min-width: 0 !important;
}

.mini-btn {
  margin: 0;
  padding: 0 8px;
  font-size: 13px;
  line-height: 2;
}
.weui-btn_mini {
  margin-right: 16px;
}
