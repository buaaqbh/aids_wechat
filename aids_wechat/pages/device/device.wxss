@import '/style/weui.wxss';

.page {
  background-color: #f8f8f8;
}

.page__hd {
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page__title {
  font-size: 15px;
  font-weight: 400;
}

.page__desc {
  margin-top: 4px;
  color: #888888;
  text-align: left;
  font-size: 13px;
}

.weui-panel {
  margin-top: 0;
}

.service-list,
.characteristic-list {
  height: 200px;
}

.weui-cell_active {
  background-color: #ececec;
}

.weui-cell__ft {
  color: #666;
  font-size: 13px;
}

.page__bd {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 60px);
}

.button-sp-area {
  padding: 15px;
  display: grid;
  grid-template-columns: repeat(3, minmax(90px, 1fr));
  gap: 15px;
  width: 100%;
  box-sizing: border-box;
  justify-content: center;
  margin: 0 auto;
}

.weui-btn.mini-btn:last-child {
  margin-right: 0;
}
.weui-btn_mini {
  margin-right: 16px;
}




